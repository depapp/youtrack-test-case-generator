{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "apiKey": {
      "type": "string",
      "title": "AI API Key",
      "description": "Your OpenAI or other AI service API key for generating test cases"
    },
    "aiProvider": {
      "type": "string",
      "title": "AI Provider",
      "description": "Select your AI provider",
      "enum": ["openai", "anthropic", "custom"],
      "default": "openai"
    },
    "testCaseTemplate": {
      "type": "string",
      "title": "Test Case Template",
      "description": "Default template for test cases",
      "default": "**Preconditions:**\n\n**Steps:**\n1. \n\n**Expected Result:**\n"
    }
  }
}
